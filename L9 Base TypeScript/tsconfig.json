{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true, 
      "noImplicitAny": true,
      "importHelpers": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "target": "es5",
      "module": "es2020",
    },
    "include": ["src/**/*"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
}